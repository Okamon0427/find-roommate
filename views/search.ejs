<%- include("./partials/header") %>
<!-- Body of the page is here -->
<div class="container">
  <div class="main">
    <div class="row">
      <div class="col-md-12">
        <h1>Search</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <form>
          <div class="form-group">
            <input type="tex" class="form-control" id="search" name="search" placeholder="">
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary mx-auto d-block">Search</button>
          </div>
        </form>
      </div>
    </div>
    <!-- Can show search result here --> 
    <section class="testimonials text-center bg-light">
      <div class="container">
        <div class="row">
          <% if(result === "Margaret" || !result) { %>
          <div class="col-lg-4">
            <div class="testimonial-item mx-auto mb-5 mb-lg-0">
              <img class="img-fluid rounded-circle mt-3 mb-3" width=100 src="images/p1.jpg" alt="..." />
              <h5>Margaret E.</h5>
              <p class="font-weight-light mb-0">"I live in North York. Don't hesitate to contact me!"</p>
            </div>
          </div>
          <% } %>
          <% if(result === "Fred" || !result) { %>
          <div class="col-lg-4">
            <div class="testimonial-item mx-auto mb-5 mb-lg-0">
              <img class="img-fluid rounded-circle mt-3 mb-3" width=100 src="images/p2.jpg" alt="..." />
              <h5>Fred S.</h5>
              <p class="font-weight-light mb-0">"I'm considering living in Mississauga"</p>
            </div>
          </div>
          <% } %>
          <% if(result === "Sarah" || !result) { %>
          <div class="col-lg-4">
            <div class="testimonial-item mx-auto mb-5 mb-lg-0">
              <img class="img-fluid rounded-circle mt-3 mb-3" width=100 src="images/p6.jpg" alt="..." />
              <h5>Sarah W.</h5>
              <p class="font-weight-light mb-0">"Live together in Toronto!"</p>
            </div>
          </div>
          <% } %>
          <% if(result && result !== "Margaret" && result !== "Fred" && result !== "Sarah") { %>
          <h2>No Match</h2>
          <% } %>
        </div>
      </div>
    </section>
  </div> <!--class="main"-->
</div><!--class="container"-->
<%- include("./partials/footer") %>
